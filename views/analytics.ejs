        <style>
            header {
                position: fixed;
                width: 100%;
                top: 0;
                z-index: 1000;
            }

            body {
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            main {
                flex-grow: 1;
            }

            .analytics-title,
            .demo-section {
                background: linear-gradient(45deg, darkseagreen, seagreen);
                background-size: cover;
                background-position: center;
                color: var(--text-color);
                padding: 70px 0;
                display: flex;
                justify-content: center;
                text-align: center;
                overflow: hidden;
            }

            .title-div {
                margin-top: 20px;
            }

            .title-div h1,
            .title-div p {
                color: white;
            }

            .carousel-item {
                width: 100%;
                height: 350px;
                overflow: hidden;
            }

            .carousel-image {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

            .analytics-intro {
                margin: 30px;
            }

            .analytics-intro .card:hover {
                cursor: pointer;
            }

            .analytics-intro .card {
                margin-right: 15px;
                height: 500px;
            }

            .card-img-top {
                width: auto;
                height: 30%;
                object-fit: cover;
                object-position: center;
            }

            .modal-content {
                align-items: center;
            }

            .modal-title {
                font-size: 24px;
            }

            .modal-body {
                text-align: justify;
                height: 500px;
                width: 90%;
            }

            .pulse {
                animation: pulse 0.5s ease-in-out;
            }

            .hover-effect {
                transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            }

            .card-hover {
                transform: translate(-15px, -10px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            }

            .demo-section {
                color: white;
                margin-bottom: 100px;
            }

            #first-line {
                text-align: left;
                font-weight: 700;
                font-size: 36px;
            }

            #second-line {
                font-size: 24px;
                font-weight: 600px;
                text-align: left;
            }

            .animate-on-scroll {
                opacity: 0;
                transform: translateY(30px);
                transition: opacity 1.0s ease, transform 1.0s ease;
            }

            .animate-on-scroll.visible {
                opacity: 1;
                transform: translateY(0);
            }
        </style>

        <!-- Bootstrap core JavaScript -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="http://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js"
            integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em"
            crossorigin="anonymous"></script>
        <script src="/js/codepai.js"></script>
        <script>
            $('.hover-effect').hover(
                function () { $(this).addClass('card-hover'); },
                function () { $(this).removeClass('card-hover'); }
            );

            function animateOnScroll() {
                $('.animate-on-scroll').each(function () {
                    var elementBottom = $(this).offset().top + $(this).outerHeight();
                    var windowBottom = $(window).scrollTop() + $(window).height();
                    if (elementBottom < windowBottom - 10) {
                        $(this).addClass('visible');
                    }
                });
            }

            $(window).on('scroll', animateOnScroll);
            animateOnScroll();
        </script>

    </body>

</html>